@model Movie

@{
    ViewData["Title"] = Model.Title;
}

<div class="row mt-5">
    <div class="col-md-3">
        <img src="data:image/*;base64,@Convert.ToBase64String(Model.Poster)" class="img-thumbnail" alt="@Model.Title"/>
    </div>
    <div class="col-md-8 ">
        <div class="d-flex justify-content-between">
            <h3>@Model.Title</h3>
            <span class="mb-0 mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">@Model.Rate.ToString("0.0")</span>
            </span>
        </div>
        <div class="mb-3">
            <span class="text-muted">
                <i class="bi bi-calendar-week"></i>
                @Model.Year
            </span>
            <span class="text-muted ms-3">
                <i class="bi bi-film"></i>
                @Model.Genre.Name
            </span>
        </div>
        <p class="text-justify">@Model.Storyline</p>
    </div>
</div>